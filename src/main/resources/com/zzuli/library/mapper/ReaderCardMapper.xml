<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzuli.library.mapper.ReaderCardMapper">
    <!--通过账号和密码查询读者卡信息-->
    <select id="getReaderCardByIdAndPwd" parameterType="readercard" resultType="readercard">
        select * from reader_card where reader_id=#{reader_id} and password=#{password}
    </select>

    <!--修改指定读者的读者姓名, 在修改读者信息时可能修改了读者的姓名-->
    <update id="updateReaderCard" parameterType="readerInfo">
        update reader_card set username = #{name} where reader_id = #{reader_id}
    </update>
    
    <!--删除指定id的读者的借阅卡-->
    <delete id="deleteReaderCard" parameterType="long">
        delete from reader_card where reader_id = #{reader_id}
    </delete>

    <!--新增借阅卡-->
    <insert id="insertReaderCard" parameterType="readerCard">
        insert into reader_card values (#{reader_id}, #{userName}, #{password})
    </insert>

    <!--修改读者密码-->
    <update id="updatePassword" parameterType="readerCard">
        update reader_card set password = #{password} where reader_id = #{reader_id}
    </update>

</mapper>